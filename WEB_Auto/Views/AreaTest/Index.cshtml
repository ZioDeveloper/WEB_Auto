<body>
    <div class="container py-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5>Telai da modificare</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "AreaTest",new {  },FormMethod.Post))
                {
                    @Html.TextBox("test")
                    <br />
                    <button type="submit" value="Delete" class="btn btn-sm btn-danger rounded-0" onclick="return confirm('Are you sure?')"><i class="fa fa-trash-o"></i> Delete</button>
                    <br /><br />
                    <table id="DataTable" style="width:100%;" class="table table-bordered">
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="checkBoxAll" class="custom-checkbox" /></th>

                                <th>telaio</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.WEB_Auto_ListaPerizieXSpedizione_vw)
                            {

                                <tr>

                                    <td>@Html.CheckBox("ID", new { value = item.ID, @class = "custom-checkbox chkCheckBoxId" })</td>

                                    <td>@Html.DisplayFor(modelItem => item.Telaio)</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</body>
