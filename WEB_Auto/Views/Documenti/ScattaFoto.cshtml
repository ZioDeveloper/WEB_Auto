</div>
<br />
<br />
@using (Html.BeginForm("UploadFoto", "Documenti", new { myIDPerizia = ViewBag.myIDPerizia }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <table border="0">
        <thead>
            <tr>

                <td>

                    <input type="file" name="files" multiple id="files_0" accept="image/*" />
                </td>
                <td>
                    <input type="submit" value="Upload" class="btn btn-success " />
                </td>
            </tr>
            @*<tr>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Upload" class="submit" />
                    </td>
                </tr>*@

        </thead>
    </table>

    <br />


}

<br />
@foreach (var item in Model)
{
    <table border="0">
        <tr>
            <td></td>
            <td>
                <img src="@Url.Content("~/DocumentiXTelai/Foto/" + item.FileName)" title="@Url.Content(item.FileName)" alt="Image" style='height: 480px; width: 640; object-fit: contain'>

            </td>
            


            <td>

                @Html.ActionLink("Elimina", "CancellaDocumento", new { IDDocumento = item.ID,
               myIDPerizia = item.IDPerizia,
               nomefile = item.FileName,
               IDPerito = ViewBag.IDPerito,
               IDSpedizione = ViewBag.IDSpedizione,
               IDMeteo = ViewBag.IDMeteo,
               IDTP = ViewBag.IDTP
           }, new { @class = "btn btn-danger btn-xs", onclick = "return confirm('Vuoi davvero cancellare la foto ?');" })
            </td>
        </tr>
        <br />

    </table>

}





