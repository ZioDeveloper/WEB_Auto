@*<br />*@
<div class="jumbotron">
    @*<br />
        <h4>Utente autenticato</h4>
        <br />*@
    <div>
        @{var item1 = Model.AGR_Periti_WEB.ToList();}
        @{var item2 = Model.Periti.ToList();}
        @{var item3 = Model.AGR_Porti.ToList();}
        @{var item4 = Model.Periti.ToList();}
        Benvenuto <b>@item1[0].Descr </b>
