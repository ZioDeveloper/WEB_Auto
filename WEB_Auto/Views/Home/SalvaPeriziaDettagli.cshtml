        </tr>
        <tr>
            <td>
                @Html.Label("Note")
            </td>
            <td>
                &nbsp;&nbsp;
            </td>


            <td>

                @Html.TextArea("Note", null, new { style = "width: 200px;" })

            </td>
        </tr>

    </table>





        <div>
            <button type="submit" class="btn btn-success custom">Conferma</button>
        </div>
    }
</div>

