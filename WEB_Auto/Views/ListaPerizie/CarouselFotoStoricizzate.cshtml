@model WEB_Auto.Models.HomeModel
@{
    ViewBag.Title = "CarouselFotoStoriche";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
@{ int cnt = 0;
    string aPath = "https://isp.interconsult.it/photo/winauto/";
    string aFoto = "";
    int progFoto = 1;}
<br />
<div>
    @Html.ActionLink("Esci da visualizzazione foto", "VisualizzaPreload", "Storico", new { aViaggio = ViewBag.myViaggio }, new { @class = "btn btn-success custom" })
</div>
<div class="container">
    <h4>Foto allegate</h4>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        @*<ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>*@

        <!-- Wrapper for slides -->
        <div class="carousel-inner">


            @for (int i = 0; i < ViewBag.NumFoto; i++)
            {
                if (cnt == 0)
                {
                    <div class="item active">
                        @{aFoto = aPath + ViewBag.IDPerizia + "_" + progFoto.ToString("0000") + ".JPG";}
                        <img src=@aFoto />

                    </div>
                }
                else
                {
                    <div class="item">
                        @{aFoto = aPath + ViewBag.IDPerizia + "_" + progFoto.ToString("0000") + ".JPG";}
                        <img src=@aFoto />

                    </div>

                }
                cnt++;
                progFoto++;
            }

            @*@foreach (var item in Model.WEB_ListaPerizieFlat_DEF_vw)
                {

                    if (cnt == 0)
                    {
                        <div class="item active">
                            @{aFoto = aPath + item.IDPerizia + "_" + progFoto.ToString("0000") + ".JPG";}
                            <img src=@aFoto />

                        </div>
                    }
                    else
                    {
                        <div class="item">
                            @{aFoto = aPath + item.IDPerizia + "_" + progFoto.ToString("0000") + ".JPG";}
                            <img src=@aFoto />

                        </div>

                    }
                    cnt++;
                    progFoto++;
                }*@



        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
