                @Html.DisplayFor(modelItem => item.IDSpedizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPerizia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDTipoPerizia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ETD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ETA)
            </td>

        </tr>
