
@{
    ViewBag.Title = "InsertPDFViaggio";
}
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>


<h4>Inserisci PDF relativo al viaggio</h4>

<div>
    @using (Html.BeginForm("Exec", "PDFViaggio", new { }, FormMethod.Post))
    {

        @Html.Label("Seleziona viaggio")
        if (Session["Classe"].ToString() == "0")
        {
            @Html.DropDownList("IDSpedizione", (SelectList)ViewData["ElencoSpedizioni"], "-- Seleziona viaggio --", new { @style = "font-size: 13px;", @class = "form-control selectpicker dropupAuto = false data-live-search=true data-size=5" }) @*onfocus = "blur();",*@
        }
        else
        {
            @Html.DropDownList("IDSpedizione", (SelectList)ViewData["ElencoSpedizioni"], new { @style = "font-size: 13px;", @class = "form-control selectpicker dropupAuto = false data-live-search=true data-size=5" })
        }
        <br />
        @Html.DropDownList("IDTipoViaggio", (SelectList)ViewData["ElencoTP"], "-- Seleziona tipo --", new { @style = "font-size: 13px;", @class = "form-control selectpicker dropupAuto = false data-live-search=true data-size=5" }) @*onfocus = "blur();",*@
        <br />
        <div>
            <button type="submit" class="btn btn-primary custom">Inserisci PDF</button>
        </div>

    }
</div>
<br />

<script>
    $('.selectpicker').selectpicker({
        dropupAuto: false,
        liveSearch: true,
        showSubtext: true

    });
</script>
<script>
    function submitform() {
        $('form').submit();
    }
</script>