<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.js"></script>

</head>
<body>
    

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["Classe"].ToString() == "0")
                    {


                        <li>@Html.ActionLink("Home", "Index", "Home", new { usr = Session["User"].ToString() }, null)</li>
                        @*@Html.LiActionLink("Home", "Index", "Home", Session["User"].ToString());*@
                        @Html.LiActionLink("Cerca telaio", "CercaTelaio", "Storico", "")
                        @Html.LiActionLink("Lista viaggi", "ListaSpedizioni", "ListaPerizie", "")
                        @Html.LiActionLink("Modifica viaggio", "ModificaViaggio", "ModificaViaggio", "")
                        @Html.LiActionLink("Dati preload", "VisualizzaPreload", "Storico", "")
                        if (Session["IDRuolo"].ToString() == "2")
                        {
                            @Html.LiActionLink("Lista perizie cancellate", "ListaPerizieCancellate", "RecuperaDatiCancellati", "")
                        }
                        @*@Html.LiActionLink("Invio mail", "AllegaFoto", "InvioFotoViaEmail", "")*@
                        @*@Html.LiActionLink("PDF Viaggio", "InsertPDFViaggio", "PDFViaggio", "")*@


                        <li class="dropdown-submenu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <span class="nav-label">Utilities</span><span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.LiActionLink("PDF Viaggio", "ScattaPDFSpedizione", "PDFViaggio", "")</li>
                                <li>@Html.LiActionLink("Invio mail", "AllegaFoto", "InvioFotoViaEmail", "")</li>
                            </ul>
                        </li>
                        @Html.LiActionLink("Contact", "Contact", "Home", "")
                    }

                    else
                    {
                        @Html.LiActionLink("Home", "Index", "Home", "")

                        @Html.LiActionLink("Lista viaggi", "ListaSpedizioni", "ListaPerizie", "")

                        @Html.LiActionLink("Contact", "Contact", "Home", "")
                    }




                    @*@Html.LiActionLink("TEST NON USARE", "Index", "AreaTest")</li>*@

                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@


                </ul>
            </div>
        </div>


    </div>
    <div class="container body-content">
        @*<div style="color:red">TEST !!!!</div>*@
        @RenderBody()
        <hr />

        <footer>
            @*<div style="color:red">TEST !!!!</div>*@
            <p>&copy; @DateTime.Now.Year - Astrea Claim Solutions S.r.l. -  Release : @Html.AssemblyVersion() </p>

           
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

    <script type="text/javascript">

        $(function () {
            $('.navbar-nav li').click(function () {
                $(this).addClass('active').siblings().removeClass('active');
            });
        });

</script>
