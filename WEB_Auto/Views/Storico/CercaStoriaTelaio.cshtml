                    </td>
                    <td>
                        @Html.Label(myViaggio) &nbsp;&nbsp;&nbsp;&nbsp;
                    </td>
                    @*<td>&nbsp;&nbsp;</td>*@
                    @*</tr>

                        <tr>*@
                    <td>
                        @Html.Label("POL : ")
                    </td>
                    <td>
