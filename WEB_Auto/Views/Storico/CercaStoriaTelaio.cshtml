                        @Html.Label("Spedizione : ")
                    </td>
                    <td>
                        @Html.Label(mySpediz)
                    </td>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>


                    @*</tr>
                        <tr>*@
                    <td>
