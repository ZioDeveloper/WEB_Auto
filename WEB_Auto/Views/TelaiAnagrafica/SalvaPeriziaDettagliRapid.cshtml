                      </td>
                      <td>

                          @*@Html.DropDownList("IDParte", new SelectList((SelectList)ViewData["ElencoParti"], "Value", "Text", null), "-- Seleziona parte --", new { @class = "form-control selectpicker dropupAuto = false data-live-search=true data-size=5" })*@
